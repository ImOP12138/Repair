@import "../../../../../style/public/detail.wxss";
@import "../../../style/skin.wxss"; 

.form-group .line-desc {
	font-size: 28rpx;
	text-align: center;
	width: 100%;
	color: #666;
}

.common-address-box {
	background: #f5f5f5;
	padding: 20rpx;
	border-radius: 10rpx;
}

.common-address-text {
	display: block;
	font-size: 28rpx;
	color: #333;
	line-height: 1.6;
	margin-bottom: 20rpx;
}

.common-address-btns {
	display: flex;
	gap: 20rpx;
}

.mini-btn {
	flex: 1;
	height: 60rpx;
	line-height: 60rpx;
	font-size: 26rpx;
	background: #fff;
	border: 1rpx solid #ddd;
	color: #333;
	border-radius: 8rpx;
	padding: 0;
}

.mini-btn::after {
	border: none;
}

.submit-line {
	width: 100%;
}