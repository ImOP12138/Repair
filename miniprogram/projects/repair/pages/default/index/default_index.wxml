<view class="main">
    <view class="top">
        <image mode="widthFix" src="../../../images/home.jpg" class="loading" />
    </view>

    <view class="box">
        <view class="box-title">服务项目</view>
        <view class="inner">
            <view class="item" wx:for="{{services}}" wx:key="id" bindtap="bindServiceTap" data-type="{{item.id}}">
                <view class="item-icon">{{item.icon}}</view>
                <view class="item-info">
                    <view class="item-title">{{item.title}}</view>
                    <view class="item-desc">{{item.desc}}</view>
                </view>
                <view class="item-arrow">›</view>
            </view>
        </view>
    </view>
</view>

<block wx:if="{{skin.IS_SUB}}">
    <import src="../../tpls/menu_tpl.wxml" />
    <template is="menuTpl" data="{{curMenu:'default_index',returnHome:false}}" />
</block>
