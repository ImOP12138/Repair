<view class="main padding-project">
	<view class="form-box shadow-project card-project">
		<view class="form-group">
			<view class="title must">新密码</view>
			<input password="true" placeholder="请输入新密码(至少6位)" placeholder-class="phc" bindinput="bindNewPasswordInput" value="{{newPassword}}" maxlength="30"></input>
		</view>

		<view class="form-group">
			<view class="title must">确认密码</view>
			<input password="true" placeholder="请再次输入新密码" placeholder-class="phc" bindinput="bindConfirmPasswordInput" value="{{confirmPassword}}" maxlength="30"></input>
		</view>
	</view>

	<view class="hint-text">设置密码后，可使用手机号+密码方式登录</view>

	<button class="btn-base btn-project shadow" bindtap="bindSubmitTap">保存密码</button>
</view>
