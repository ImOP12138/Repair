<view class="main {{skin.IS_SUB?'sub-margin-bottom':''}}">
	<!--top area begin-->
	<view class="upside upside-shadow" bindtap="url" data-url="{{user?'../edit/my_edit':'../reg/my_reg'}}">
		<image mode="widthFix" lazy-load class="upImg loading" src="../../../images/my.jpg" />
		<view class="user-bar">
			<view class="avatar">
				<image mode="aspectFit" src="../../../images/tabbar/my_cur.png" />
			</view>
			<view class="detail">
				<view class="name text-cut">{{user?user.USER_NAME:'欢迎回家~~~'}}</view>
				<view class="desc">
					<view wx:if="{{user&&user.USER_STATUS==9}}" class="tag small radius bg-purple light">已禁用</view>
					<view wx:elif="{{user&&user.USER_STATUS==0}}" class="tag small radius bg-orange light">已注册，待审核</view>
					<view wx:elif="{{user&&user.USER_STATUS==8}}" class="tag small radius bg-red light">审核未通过，请修改资料</view>
					<view wx:else class="text-cut">{{user?'欢迎回家~~~':'马上注册，使用更多功能'}}</view>
				</view>
			</view>
		</view>
	</view>
	<!--top area end-->

	<!--down area begin-->
	<view class="down padding-project">

		<view wx:if="{{isLogin}}" class="repair card-project shadow-project">
			<view class="title" bindtap="url" data-type="relaunch" data-url="../../task/my_list/task_my_list">我的报修工单
				<text bindtap="url" data-url="../../task/my_list/task_my_list" class="right">全部工单<text class="icon-right" /></text>
			</view>
			<view class="item-list">
				<view class="item" bindtap="url"  data-type="relaunch" data-url="../../task/my_list/task_my_list?status=0">
					<view wx:if="{{task&&task.status0Cnt}}" class="num">{{task.status0Cnt}}</view>
					<image src="../../../images/my/task_0.png" />
					<text>待派工</text>
				</view>
				<view class="item" bindtap="url"  data-type="relaunch" data-url="../../task/my_list/task_my_list?status=1">
					<view wx:if="{{task&&task.status1Cnt}}" class="num">{{task.status1Cnt}}</view>
					<image src="../../../images/my/task_1.png" />
					<text>待处理</text>
				</view>
				<view class="item" bindtap="url"  data-type="relaunch" data-url="../../task/my_list/task_my_list?status=2">
					<view wx:if="{{task&&task.status2Cnt}}" class="num">{{task.status2Cnt}}</view>
					<image src="../../../images/my/task_2.png" />
					<text>处理中</text>
				</view>
				<view class="item" bindtap="url"  data-type="relaunch" data-url="../../task/my_list/task_my_list?status=9">
					<view wx:if="{{task&&task.status9Cnt}}" class="num">{{task.status9Cnt}}</view>
					<image src="../../../images/my/task_9.png" />
					<text>已完成</text>
				</view>
			</view>
		</view>

		<!--base begin -->
		<view class="comm-list menu card-project shadow-project">
			<view wx:if="{{isLogin&&user&&user.USER_STATUS!=9}}" class="item arrow" bindtap="url" data-url="../edit/my_edit">
				<view class="content">
					<text class="icon-edit my-icon-project text-green"></text>
					<text class="text-black">修改我的资料</text>
				</view>
			</view>

			<view wx:if="{{isLogin}}" class="item arrow" bindtap="url" data-url="../password/my_password">
				<view class="content">
					<text class="icon-lock my-icon-project text-orange"></text>
					<text class="text-black">设置/修改密码</text>
				</view>
			</view>

			<view wx:if="{{isLogin}}" class="item arrow" bindtap="bindSwitchAccount">
				<view class="content">
					<text class="icon-switch my-icon-project text-blue"></text>
					<text class="text-black">切换账号</text>
				</view>
			</view>

			<view wx:if="{{isLogin}}" class="item arrow" bindtap="bindLogout">
				<view class="content">
					<text class="icon-exit my-icon-project text-red"></text>
					<text class="text-black">退出登录</text>
				</view>
			</view>

			<view wx:if="{{!isLogin}}" class="item arrow" bindtap="bindGoLogin">
				<view class="content">
					<text class="icon-mobile my-icon-project text-green"></text>
					<text class="text-black">登录/注册</text>
				</view>
			</view>

			<!-- <view class="item arrow" bindtap="url" data-url="../fav/my_fav">
				<view class="content">
					<text class="icon-favor my-icon-project text-green"></text>
					<text class="text-black">我的收藏</text>
				</view>
			</view>

			<view class="item arrow" bindtap="url" data-url="../foot/my_foot">
				<view class="content">
					<text class="icon-footprint my-icon-project text-green"></text>
					<text class="text-black">历史浏览</text>
				</view>
			</view> -->

			<view class="item arrow" bindtap="url" data-url="../../about/index/about_index?key=SETUP_CONTENT_ABOUT">
				<view class="content">
					<text class="icon-service my-icon-project text-purple"></text>
					<text class="text-black">关于我们</text>
				</view>
			</view>

		</view>
		<!--sys end -->

		<view class="secret-area" bindtap="bindSecretTap">
			<text class="secret-hint">版本 v1.0.0</text>
		</view>

	</view>
	<!--down area end-->

</view>
<view style="height:100rpx"></view>



<block wx:if="{{skin.IS_SUB}}">
	<import src="../../tpls/menu_tpl.wxml" />
	<template is="menuTpl" data="{{curMenu:'my_index',returnHome:false}}" />
</block>